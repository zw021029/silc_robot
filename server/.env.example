# ======================
# 服务器配置
# ======================
PORT=3005                         # 服务器端口 (默认: 3005)
NODE_ENV=development              # 环境模式 (development/production/test)
DEBUG=true                        # 是否启用调试模式
API_BASE_URL=http://localhost:3005 # API基础地址

# ======================
# 数据库配置 (MongoDB)
# ======================
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_URI=mongodb://user:pwd@127.0.0.1:27017/silc_robot # MongoDB连接字符串

# ======================
# 数据库配置 (PostgreSQL)
# ======================
PG_USER=
PG_PASSWORD=
PG_HOST=
PG_PORT=
PG_DATABASE=

# ======================
# 微信配置
# ======================
WECHAT_APPID=your-appid-here
WECHAT_SECRET=your-secret-here

# ======================
# JWT 认证配置
# ======================
JWT_SECRET=your-secret-key        # JWT加密密钥（生产环境务必修改！）
# JWT_EXPIRES_IN=7d               # 可覆盖代码中的默认过期时间

# ======================
# Redis 缓存配置
# ======================
REDIS_HOST=localhost              # Redis服务器地址
REDIS_PORT=6379                   # Redis端口
REDIS_PASSWORD=                   # Redis密码（没有密码留空）

# ======================
# 腾讯云短信配置
# ======================
SMS_SECRECT_ID=
SMS_SECRET_KEY=