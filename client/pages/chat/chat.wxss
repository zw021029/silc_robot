/* 新样式文件 */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.chat-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
  padding-bottom: 120rpx;
}

.chat-list-content {
  padding-bottom: 100rpx;
}

/* 机器人信息 */
.robot-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.robot-info .robot-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 10rpx;
  border: 2rpx solid #ffffff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.robot-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
  color: #333;
}

.robot-desc {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  line-height: 1.4;
}

/* 消息项 */
.message-item {
  display: flex;
  margin-bottom: 15rpx;
  position: relative;
  max-width: 100%;
}

/* 用户消息 */
.user-message {
  flex-direction: row;
  justify-content: flex-end;
}

/* 机器人消息 */
.robot-message {
  flex-direction: row;
  justify-content: flex-start;
}

/* 头像 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 0 16rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #ffffff;
  overflow: hidden;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.text-avatar {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.user-avatar.text-avatar {
  background-color: #4a90e2;
}

.robot-avatar.text-avatar {
  background-color: #42b983;
}

/* 消息内容区域 */
.message-wrapper {
  max-width: 70%;
  display: flex;
  flex-direction: column;
}

/* 消息内容 */
.message-content {
  padding: 16rpx 24rpx;
  border-radius: 18rpx;
  font-size: 30rpx;
  line-height: 1.5;
  word-break: break-all;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  margin-top: 12rpx;
}

.user-message .message-content {
  background-color: #4a90e2;
  color: #fff;
  border-radius: 18rpx 4rpx 18rpx 18rpx;
  margin-right: 12rpx;
}

.robot-message .message-content {
  background-color: #fff;
  color: #333;
  border-radius: 4rpx 18rpx 18rpx 18rpx;
  margin-left: 12rpx;
}

/* 消息时间 */
.message-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
  margin-bottom: 6rpx;
}

.user-message .message-time {
  text-align: right;
  margin-right: 12rpx;
}

.robot-message .message-time {
  text-align: left;
  margin-left: 12rpx;
}

/* 加载中动画 */
.loading {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}

.loading-dots {
  display: flex;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background-color: #ccc;
  margin: 0 8rpx;
  animation: dot-flashing 1s infinite alternate;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes dot-flashing {
  0% {
    opacity: 0.2;
  }
  100% {
    opacity: 1;
  }
}

/* 输入区域 */
.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  z-index: 100;
  transition: transform 0.3s ease;
}

.message-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #e0e0e0;
  color: #999;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.send-btn.active {
  background-color: #07c160;
  color: #fff;
}

/* 分享菜单 */
.share-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100;
  display: none;
}

.share-mask.show {
  display: block;
}

.share-menu {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
  padding-bottom: env(safe-area-inset-bottom);
}

.share-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.share-options {
  display: flex;
  padding: 40rpx 20rpx;
}

.share-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border: none;
  padding: 0;
  font-size: 28rpx;
  line-height: 1.5;
}

.share-option::after {
  border: none;
}

.option-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
}

.share-cancel {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #0080ff;
  background-color: #f5f5f5;
  border-radius: 0;
  border: none;
  margin-top: 20rpx;
}

.share-cancel::after {
  border: none;
}
